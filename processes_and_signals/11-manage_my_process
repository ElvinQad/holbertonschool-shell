#!/usr/bin/env bash
# This script manages the manage_my_process script

# Function to start the process
start_process() {
    # Start the process in the background
    ./manage_my_process &
    # Get the PID of the last background process
    echo $! > /var/run/my_process.pid
    # Ensure proper permissions
    chmod 644 /var/run/my_process.pid
    echo "manage_my_process started"
}

# Function to stop the process
stop_process() {
    # Check if PID file exists
    if [ -f /var/run/my_process.pid ]; then
        # Get the PID
        pid=$(cat /var/run/my_process.pid)
        # Try to kill the process
        kill -9 "$pid" 2>/dev/null
        # Wait a moment to ensure process is killed
        sleep 1
        # Check if process is still running
        if ps -p "$pid" > /dev/null 2>&1; then
            kill -9 "$pid" 2>/dev/null
            sleep 1
        fi
    fi
    # Always remove the PID file if it exists
    rm -f /var/run/my_process.pid 2>/dev/null
    echo "manage_my_process stopped"
}

# Main script logic
case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        stop_process > /dev/null
        start_process > /dev/null
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac

exit 0 